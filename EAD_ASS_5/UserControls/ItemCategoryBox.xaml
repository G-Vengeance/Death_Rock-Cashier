<UserControl x:Class="Death_Rock.UserControls.ItemCategoryBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Death_Rock.UserControls"
             mc:Ignorable="d" 
              Loaded="UserControl_Loaded">
    <Border CornerRadius="5"  Padding="20" Margin="10"
               Background="#FF373737" Cursor="Hand" Name="border" BorderBrush="White">
        <TextBlock Name="content" TextAlignment="Center" VerticalAlignment="Center"
               Foreground="White"
               FontSize="18" FontFamily="Rockwell"></TextBlock>
    </Border>
</UserControl>
